package com.sunbeam;

public class Solution1Main {

	public static int linearSearchComparisons(int arr[], int key) {

		int comparisons = 0;
		for (int i = 0; i < arr.length; i++) {
			comparisons++;
			if (arr[i] == key) {
				return comparisons;
			}
		}

		return arr.length;
	}

	public static void main(String[] args) {

		int arr[] = { 10, 33, 100, 67, 95 };

		int key = 33;
		int comparisons = linearSearchComparisons(arr, key);

		System.out.println("No of Comparisons i Linear Search : " + comparisons);
	}

}
